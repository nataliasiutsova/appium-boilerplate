{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/sauce-service",
            "@types/mocha",
            "@wdio/appium-service",
            "@wdio/local-runner",
            "@wdio/allure-reporter"
        ]
    },
    "include": ["./config/**/*.ts", "./tests/**/*.ts"]
}
